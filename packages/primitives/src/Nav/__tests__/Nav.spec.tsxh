import * as React from 'react'
import serializer from '@emotion/jest'
import renderer from 'react-test-renderer'
import { Nav } from '../Nav'
import { NavItem } from '../NavItem'
import { VisuallyHidden } from '../../VisuallyHidden'



describe('Nav', () => {
  it('should render the Nav', () => {
    expect(
      renderer
        .create(
          <Nav aria-label="Menu in test">
            <NavItem>Product</NavItem>
          </Nav>,
        )
        .toJSON(),
    ).toMatchInlineSnapshot(`
      .emotion-0 {
        box-sizing: border-box;
        margin: 0;
        min-width: 0;
      }

      .emotion-1 {
        box-sizing: border-box;
        margin: 0;
        min-width: 0;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      <nav
        className="emotion-0"
      >
        <ul
          aria-label="Menu in test"
          className="emotion-1"
        >
          <li
            className="emotion-0"
          >
            Product
          </li>
        </ul>
      </nav>
    `)
  })

  it('should allow span menu items with accessible labels', () => {
    expect(
      renderer
        .create(
          <MenuItem as="span">
            <VisuallyHidden>Current category:</VisuallyHidden>
            Product announcements
          </MenuItem>,
        )
        .toJSON(),
    ).toMatchInlineSnapshot(`
      .emotion-1 {
        box-sizing: border-box;
        margin: 0;
        min-width: 0;
      }

      .emotion-0 {
        border: 0;
        -webkit-clip: rect(0 0 0 0);
        clip: rect(0 0 0 0);
        height: 1px;
        margin: -1px;
        overflow: hidden;
        padding: 0;
        position: absolute;
        width: 1px;
        white-space: nowrap;
        word-wrap: normal;
      }

      <span
        className="emotion-1"
      >
        <span
          className="emotion-0"
        >
          Current category:
        </span>
        Product announcements
      </span>
    `)
  })

  it('should render the MenuItems', () => {
    expect(
      renderer
        .create(
          <Menu aria-label="Menu with current">
            <MenuItem>Item 0</MenuItem>
            <MenuItem>Item 1</MenuItem>
            <MenuItem>Item 2</MenuItem>
          </Menu>,
        )
        .toJSON(),
    ).toMatchInlineSnapshot(`
      .emotion-0 {
        box-sizing: border-box;
        margin: 0;
        min-width: 0;
      }

      .emotion-3 {
        box-sizing: border-box;
        margin: 0;
        min-width: 0;
        list-style: none;
        margin: 0;
        padding: 0;
      }

      <nav
        className="emotion-0"
      >
        <ul
          aria-label="Menu with current"
          className="emotion-3"
        >
          <li
            className="emotion-0"
          >
            Item 0
          </li>
          <li
            className="emotion-0"
          >
            Item 1
          </li>
          <li
            className="emotion-0"
          >
            Item 2
          </li>
        </ul>
      </nav>
    `)
  })
})
